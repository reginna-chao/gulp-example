{
	"options": {
		"merge-default-rules": false,
		"formatter": "html",
		"output-file": "linters/sass-lint.html",
		"max-warnings": 50
	},
	"files": {
		"include": "src/sass/**/*.sass",
		"ignore": [
			"src/sass/vendor/**/*.*"
		]
	},
	"rules": {
		"extends-before-mixins": 2,
		"extends-before-declarations": 2,
		"placeholder-in-extend": 2,
		"leading-zero": [
			2,
			{
				"include": true
			}
		],
		"mixins-before-declarations": [
			2,
			{
				"exclude": [
					"breakpoint",
					"breakpoint-between",
					"breakpoint-hover",
					"mq"
				]
			}
		],
		"no-warn": 1,
		"no-debug": 1,
		"no-ids": 2,
		"no-important": 2,
		"hex-notation": [
			2,
			{
				"style": "lowercase"
			}
		],
		"indentation": [
			1,
			{
				"size": "tab"
			}
		],
		"pseudo-element": true,
		"property-sort-order": [
			1,
			{
				"order": [
					"content",
					"position",
					"z-index",
					"top",
					"bottom",
					"right",
					"left",
					"display",
					"align-items",
					"justify-content",
					"flex",
					"flex-direction",
					"flex-wrap",
					"order",
					"float",
					"clear",
					"overflow",
					"overflow-x",
					"overflow-y",
					"margin",
					"margin-top",
					"margin-right",
					"margin-bottom",
					"margin-left",
					"padding",
					"padding-top",
					"padding-right",
					"padding-bottom",
					"padding-left",
					"width",
					"min-width",
					"max-width",
					"height",
					"min-height",
					"max-height",
					"font-size",
					"font-family",
					"font-weight",
					"line-height",
					"text-align",
					"text-justify",
					"text-indent",
					"text-overflow",
					"text-decoration",
					"text-transform",
					"letter-spacing",
					"white-space",
					"color",
					"background",
					"background-position",
					"background-repeat",
					"background-size",
					"background-color",
					"background-clip",
					"border",
					"border-style",
					"border-width",
					"border-color",
					"border-top",
					"border-top-style",
					"border-top-width",
					"border-top-color",
					"border-right",
					"border-right-style",
					"border-right-width",
					"border-right-color",
					"border-bottom",
					"border-bottom-style",
					"border-bottom-width",
					"border-bottom-color",
					"border-left",
					"border-left-style",
					"border-left-width",
					"border-left-color",
					"border-radius",
					"opacity",
					"filter",
					"list-style",
					"outline",
					"visibility",
					"box-shadow",
					"text-shadow",
					"resize",
					"transform",
					"transform-origin",
					"transition"
				],
				"ignore-custom-properties": true
			}
		],
		"variable-for-property": [
			2,
			{
				"properties": [
				]
			}
		]
	}
}
