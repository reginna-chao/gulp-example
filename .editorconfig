# EditorConfig is awesome: https://EditorConfig.org

# 頂層配置文件
root = true

# 所有檔案的預設設定
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# 所有程式碼檔案使用 2 空格縮排
[*.{js,jsx,ts,tsx,scss,sass,css,html,json,yml,yaml}]
indent_style = space
indent_size = 2

# Pug 檔案使用 2 空格縮排
[*.pug]
indent_style = space
indent_size = 2

# Markdown 保留尾隨空格（用於換行）
[*.md]
trim_trailing_whitespace = false
